@model WebApplication1.Models.BloodDonation

@{
    ViewData["Title"] = "Record Blood Donation";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <i data-lucide="plus" class="w-8 h-8 text-green-600"></i>
            Record Blood Donation
        </h1>
        <p class="text-gray-600 mt-2">Capture a new blood donation from a donor</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Create" method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="DonorId" class="block text-sm font-medium text-gray-700 mb-2">Donor</label>
                    <select asp-for="DonorId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                        <option value="">Select donor</option>
                        @foreach (var donor in ViewBag.Donors as List<WebApplication1.Models.Donor>)
                        {
                            <option value="@donor.DonorId">@donor.FirstName @donor.LastName (@donor.BloodType)</option>
                        }
                    </select>
                    <span asp-validation-for="DonorId" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="BloodType" class="block text-sm font-medium text-gray-700 mb-2">Blood Type</label>
                    <select asp-for="BloodType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent">
                        <option value="">Select blood type</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                    <span asp-validation-for="BloodType" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Quantity" class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
                    <input asp-for="Quantity" type="number" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" placeholder="Units donated" />
                    <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="DonationDate" class="block text-sm font-medium text-gray-700 mb-2">Donation Date (optional)</label>
                    <input asp-for="DonationDate" type="datetime-local" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" />
                    <span asp-validation-for="DonationDate" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/BloodDonation" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">Cancel</a>
                <button type="submit" class="px-6 py-3 bg-green-600 text-white rounded-md hover:bg-green-700 transition flex items-center gap-2">
                    <i data-lucide="save" class="w-5 h-5"></i>
                    Save Donation
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
