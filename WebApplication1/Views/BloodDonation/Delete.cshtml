@model WebApplication1.Models.BloodDonation

@{
    ViewData["Title"] = "Delete Donation";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-red-600 flex items-center gap-3">
            <i data-lucide="trash-2" class="w-8 h-8"></i>
            Delete Donation
        </h1>
        <p class="text-gray-600 mt-2">Are you sure you want to delete this donation?</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <dt class="text-sm font-medium text-gray-500">Donation ID</dt>
                <dd class="text-lg font-semibold text-gray-900">#@Model.DonationId</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Donor</dt>
                <dd class="text-lg text-gray-900">@Model.Donor?.FirstName @Model.Donor?.LastName</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Blood Type</dt>
                <dd>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">@Model.BloodType</span>
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Quantity</dt>
                <dd class="text-lg text-gray-900">@Model.Quantity unit(s)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Donation Date</dt>
                <dd class="text-lg text-gray-900">@Model.DonationDate?.ToString("MMM dd, yyyy 'at' h:mm tt")</dd>
            </div>
        </dl>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Delete" method="post" class="space-y-6">
            <input asp-for="DonationId" type="hidden" />

            <div class="flex items-center">
                <input type="checkbox" id="confirmDelete" class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" required>
                <label for="confirmDelete" class="ml-2 text-sm text-gray-700">I understand this action cannot be undone.</label>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/BloodDonation/Details/@Model.DonationId" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">Cancel</a>
                <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-md hover:bg-red-700 transition flex items-center gap-2">
                    <i data-lucide="trash-2" class="w-5 h-5"></i>
                    Delete Donation
                </button>
            </div>
        </form>
    </div>
</div>
