@model WebApplication1.Models.BloodDonation

@{
    ViewData["Title"] = "Donation Details";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <i data-lucide="eye" class="w-8 h-8 text-green-600"></i>
            Donation Details
        </h1>
        <p class="text-gray-600 mt-2">Details for donation #@Model.DonationId</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <div class="text-sm text-gray-500">Donation ID</div>
                <div class="text-lg font-semibold text-gray-900">#@Model.DonationId</div>
            </div>
            <div>
                <div class="text-sm text-gray-500">Donor</div>
                <div class="text-lg font-semibold text-gray-900">@Model.Donor?.FirstName @Model.Donor?.LastName</div>
                <div class="text-sm text-gray-500">@Model.Donor?.EmailAddress</div>
            </div>
            <div>
                <div class="text-sm text-gray-500">Blood Type</div>
                <div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        @Model.BloodType
                    </span>
                </div>
            </div>
            <div>
                <div class="text-sm text-gray-500">Quantity</div>
                <div class="text-lg font-semibold text-gray-900">@Model.Quantity unit(s)</div>
            </div>
            <div>
                <div class="text-sm text-gray-500">Donation Date</div>
                <div class="text-lg text-gray-900">@Model.DonationDate?.ToString("MMM dd, yyyy 'at' h:mm tt")</div>
            </div>
        </div>

        <div class="flex justify-between items-center pt-6 border-t border-gray-200">
            <a href="/BloodDonation" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">Back to List</a>
            <div class="flex gap-3">
                <a href="/BloodDonation/Edit/@Model.DonationId" class="px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition">Edit</a>
                <a href="/BloodDonation/Delete/@Model.DonationId" class="px-6 py-3 bg-red-600 text-white rounded-md hover:bg-red-700 transition">Delete</a>
            </div>
        </div>
    </div>
</div>
