@model IEnumerable<WebApplication1.Models.BloodDonation>

@{
    ViewData["Title"] = "Blood Donations";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
                <i data-lucide="droplet" class="w-8 h-8 text-green-600"></i>
                Blood Donations
            </h1>
            <p class="text-gray-600 mt-2">Manage blood donations from donors</p>
        </div>
        <a href="/BloodDonation/Create" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition flex items-center gap-2">
            <i data-lucide="plus" class="w-5 h-5"></i>
            Record Donation
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["Message"]
        </div>
    }

    <!-- Donations Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donation ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donor</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Blood Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donation Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var donation in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                #@donation.DonationId
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@donation.Donor?.FirstName @donation.Donor?.LastName</div>
                                <div class="text-sm text-gray-500">@donation.Donor?.EmailAddress</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    @donation.BloodType
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @donation.Quantity unit(s)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @donation.DonationDate?.ToString("MMM dd, yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex space-x-2">
                                    <a href="/BloodDonation/Details/@donation.DonationId" class="text-blue-600 hover:text-blue-900">
                                        <i data-lucide="eye" class="w-4 h-4"></i>
                                    </a>
                                    <a href="/BloodDonation/Edit/@donation.DonationId" class="text-indigo-600 hover:text-indigo-900">
                                        <i data-lucide="edit" class="w-4 h-4"></i>
                                    </a>
                                    <a href="/BloodDonation/Delete/@donation.DonationId" class="text-red-600 hover:text-red-900">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i data-lucide="droplet" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No donations found</h3>
                <p class="text-gray-500 mb-6">Get started by recording your first blood donation.</p>
                <a href="/BloodDonation/Create" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition">
                    Record First Donation
                </a>
            </div>
        }
    </div>
</div>
