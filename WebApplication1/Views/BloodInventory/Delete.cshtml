@model WebApplication1.Models.BloodInventory

@{
    ViewData["Title"] = "Delete Inventory Unit";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-red-600 flex items-center gap-3">
            <i data-lucide="trash-2" class="w-8 h-8"></i>
            Delete Inventory Unit
        </h1>
        <p class="text-gray-600 mt-2">Are you sure you want to delete this inventory unit?</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <dt class="text-sm font-medium text-gray-500">Unit ID</dt>
                <dd class="text-lg font-semibold text-gray-900">#@Model.UnitId</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Blood Type</dt>
                <dd>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">@Model.BloodType</span>
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Quantity</dt>
                <dd class="text-lg text-gray-900">@(Model.Quantity?.ToString() ?? "Not specified") unit(s)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Expiration Date</dt>
                <dd class="text-lg text-gray-900">@Model.ExpirationDate.ToString("MMM dd, yyyy")</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Storage Location</dt>
                <dd class="text-lg text-gray-900">@(Model.StorageLocation ?? "Not specified")</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="text-lg text-gray-900">@(Model.Status ?? "Unknown")</dd>
            </div>
        </dl>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Delete" method="post" class="space-y-6">
            <input asp-for="UnitId" type="hidden" />

            <div class="flex items-center">
                <input type="checkbox" id="confirmDelete" class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" required>
                <label for="confirmDelete" class="ml-2 text-sm text-gray-700">I understand this action cannot be undone.</label>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/BloodInventory/Details/@Model.UnitId" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">Cancel</a>
                <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-md hover:bg-red-700 transition flex items-center gap-2">
                    <i data-lucide="trash-2" class="w-5 h-5"></i>
                    Delete Unit
                </button>
            </div>
        </form>
    </div>
</div>
