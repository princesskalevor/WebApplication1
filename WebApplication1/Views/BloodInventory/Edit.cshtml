@model WebApplication1.Models.BloodInventory

@{
    ViewData["Title"] = "Edit Inventory Unit";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <i data-lucide="edit" class="w-8 h-8 text-orange-600"></i>
            Edit Inventory Unit
        </h1>
        <p class="text-gray-600 mt-2">Update unit #@Model.UnitId</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Edit" method="post" class="space-y-6">
            <input asp-for="UnitId" type="hidden" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="BloodType" class="block text-sm font-medium text-gray-700 mb-2">Blood Type</label>
                    <select asp-for="BloodType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                    <span asp-validation-for="BloodType" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Quantity" class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
                    <input asp-for="Quantity" type="number" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
                    <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ExpirationDate" class="block text-sm font-medium text-gray-700 mb-2">Expiration Date</label>
                    <input asp-for="ExpirationDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
                    <span asp-validation-for="ExpirationDate" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="StorageLocation" class="block text-sm font-medium text-gray-700 mb-2">Storage Location</label>
                    <input asp-for="StorageLocation" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
                    <span asp-validation-for="StorageLocation" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                        <option value="Available">Available</option>
                        <option value="Used">Used</option>
                        <option value="Expired">Expired</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/BloodInventory/Details/@Model.UnitId" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">Cancel</a>
                <button type="submit" class="px-6 py-3 bg-orange-600 text-white rounded-md hover:bg-orange-700 transition flex items-center gap-2">
                    <i data-lucide="save" class="w-5 h-5"></i>
                    Update Unit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
