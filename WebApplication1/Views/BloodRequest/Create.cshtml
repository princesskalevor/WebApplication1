@model WebApplication1.Models.BloodRequest

@{
    ViewData["Title"] = "Request Blood";
}

<div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Request Blood</h2>

    @if (TempData["Message"] != null)
    {
        <p class="text-green-600 mb-4 text-center">@TempData["Message"]</p>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <!-- Full Name -->
        <div class="mb-4">
            <label asp-for="PatientName" class="block mb-1">Full Name</label>
            <input asp-for="PatientName" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="PatientName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Email -->
        <div class="mb-4">
            <label asp-for="Email" class="block mb-1">Email</label>
            <input asp-for="Email" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <!-- Blood Type -->
        <div class="mb-4">
            <label asp-for="BloodType" class="block mb-1">Blood Type</label>
            <select asp-for="BloodType" class="w-full border px-3 py-2 rounded-lg">
                <option value="">Select Blood Type</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
            </select>
            <span asp-validation-for="BloodType" class="text-red-500 text-sm"></span>
        </div>

        <!-- Units Needed -->
        <div class="mb-4">
            <label asp-for="Units" class="block mb-1">Units Needed</label>
            <input asp-for="Units" type="number" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="Units" class="text-red-500 text-sm"></span>
        </div>

        <!-- Required Date -->
        <div class="mb-4">
            <label asp-for="RequiredDate" class="block mb-1">Required Date</label>
            <input asp-for="RequiredDate" type="date" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="RequiredDate" class="text-red-500 text-sm"></span>
        </div>

        <!-- Notes -->
        <div class="mb-4">
            <label asp-for="Notes" class="block mb-1">Notes</label>
            <textarea asp-for="Notes" class="w-full border px-3 py-2 rounded-lg"></textarea>
            <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
        </div>

        <!-- Status -->
        <div class="mb-4">
            <label asp-for="Status" class="block mb-1">Status</label>
            <select asp-for="Status" class="w-full border px-3 py-2 rounded-lg">
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>
            <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
        </div>

        <!-- Request Type -->
        <div class="mb-4">
            <label asp-for="Request" class="block mb-1">Request Type</label>
            <input asp-for="Request" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="Request" class="text-red-500 text-sm"></span>
        </div>

        <!-- Hall -->
        <div class="mb-4">
            <label asp-for="Hall" class="block mb-1">Hall</label>
            <input asp-for="Hall" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="Hall" class="text-red-500 text-sm"></span>
        </div>

        <!-- Department -->
        <div class="mb-4">
            <label asp-for="Department" class="block mb-1">Department</label>
            <input asp-for="Department" class="w-full border px-3 py-2 rounded-lg" />
            <span asp-validation-for="Department" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition">
            Submit Request
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
