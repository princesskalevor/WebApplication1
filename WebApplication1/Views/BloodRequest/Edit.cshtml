@model WebApplication1.Models.BloodRequest

@{
    ViewData["Title"] = "Edit Blood Request";
}

<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <i data-lucide="edit" class="w-8 h-8 text-red-600"></i>
            Edit Blood Request
        </h1>
        <p class="text-gray-600 mt-2">Update request #@Model.RequestId</p>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Edit" method="post" class="space-y-6">
            <input asp-for="RequestId" type="hidden" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Blood Type Required -->
                <div>
                    <label asp-for="BloodTypeRequired" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <select asp-for="BloodTypeRequired" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent">
                        <option value="">Select blood type</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                    <span asp-validation-for="BloodTypeRequired" class="text-red-500 text-sm"></span>
                </div>

                <!-- Quantity Requested -->
                <div>
                    <label asp-for="QuantityRequested" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="QuantityRequested" type="number" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" placeholder="Enter quantity" />
                    <span asp-validation-for="QuantityRequested" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Requested Date -->
                <div>
                    <label asp-for="RequestedDate" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="RequestedDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" />
                    <span asp-validation-for="RequestedDate" class="text-red-500 text-sm"></span>
                </div>

                <!-- Status -->
                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent">
                        <option value="Pending">Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Completed">Completed</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <!-- Recipient -->
            <div>
                <label asp-for="RecipientId" class="block text-sm font-medium text-gray-700 mb-2">Recipient</label>
                <select asp-for="RecipientId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent">
                    <option value="">Select recipient</option>
                    @foreach (var recipient in ViewBag.Recipients as List<WebApplication1.Models.Recipient>)
                    {
                        <option value="@recipient.RecipientId">@recipient.FirstName @recipient.LastName (@recipient.BloodType)</option>
                    }
                </select>
                <span asp-validation-for="RecipientId" class="text-red-500 text-sm"></span>
                <p class="text-sm text-gray-500 mt-1">Don't see the recipient? <a href="/Recipient/Create" class="text-red-600 hover:text-red-800">Add a new recipient</a></p>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/BloodRequest/Details/@Model.RequestId" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-md hover:bg-red-700 transition flex items-center gap-2">
                    <i data-lucide="save" class="w-5 h-5"></i>
                    Update Request
                </button>
            </div>
        </form>
    </div>
</div>
