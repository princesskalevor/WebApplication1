@model WebApplication1.Models.Donor

@{
    ViewData["Title"] = "Donor Details";
}

<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
                <i data-lucide="user" class="w-8 h-8 text-red-600"></i>
                Donor Details
            </h1>
            <p class="text-gray-600 mt-2">Complete information for @Model.FirstName @Model.LastName</p>
        </div>
        <div class="flex space-x-3">
            <a href="/Donor/Edit/@Model.DonorId" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition flex items-center gap-2">
                <i data-lucide="edit" class="w-5 h-5"></i>
                Edit Donor
            </a>
            <a href="/Donor" class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
                Back to List
            </a>
        </div>
    </div>

    <!-- Donor Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Basic Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <i data-lucide="info" class="w-5 h-5 text-blue-600"></i>
                Basic Information
            </h2>
            <dl class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Donor ID</dt>
                    <dd class="text-lg font-semibold text-gray-900">#@Model.DonorId</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Full Name</dt>
                    <dd class="text-lg font-semibold text-gray-900">@Model.FirstName @Model.LastName</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Phone Number</dt>
                    <dd class="text-lg text-gray-900">@Model.PhoneNumber</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Email Address</dt>
                    <dd class="text-lg text-gray-900">@Model.EmailAddress</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Blood Type</dt>
                    <dd class="text-lg">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                            @Model.BloodType
                        </span>
                    </dd>
                </div>
            </dl>
        </div>

        <!-- Medical Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <i data-lucide="heart" class="w-5 h-5 text-green-600"></i>
                Medical Information
            </h2>
            <dl class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Medical History</dt>
                    <dd class="text-lg text-gray-900">@Model.MedicalHistory</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">QR Code</dt>
                    <dd class="text-lg text-gray-900">@(Model.QrCode ?? "Not assigned")</dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Donation History -->
    <div class="mt-8 bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 flex items-center gap-2">
                <i data-lucide="droplet" class="w-5 h-5 text-red-600"></i>
                Donation History (@Model.BloodDonations.Count() donations)
            </h2>
        </div>
        <div class="p-6">
            @if (Model.BloodDonations.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donation ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Blood Type</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var donation in Model.BloodDonations.OrderByDescending(d => d.DonationDate))
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        #@donation.DonationId
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            @donation.BloodType
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @donation.Quantity unit(s)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @donation.DonationDate?.ToString("MMM dd, yyyy")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <i data-lucide="droplet" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No donations yet</h3>
                    <p class="text-gray-500">This donor hasn't made any donations yet.</p>
                </div>
            }
        </div>
    </div>
</div>
