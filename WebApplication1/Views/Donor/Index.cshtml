@model IEnumerable<WebApplication1.Models.Donor>

@{
    ViewData["Title"] = "Donors";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
                <i data-lucide="users" class="w-8 h-8 text-red-600"></i>
                Blood Donors
            </h1>
            <p class="text-gray-600 mt-2">Manage blood donor information and donation history</p>
        </div>
        <a href="/Donor/Create" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition flex items-center gap-2">
            <i data-lucide="plus" class="w-5 h-5"></i>
            Add New Donor
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["Message"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @TempData["Error"]
        </div>
    }

    <!-- Donors Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donor ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Blood Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donations</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var donor in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                #@donor.DonorId
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@donor.FirstName @donor.LastName</div>
                                <div class="text-sm text-gray-500">@donor.EmailAddress</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @donor.PhoneNumber
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    @donor.BloodType
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @donor.BloodDonations.Count() donations
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex space-x-2">
                                    <a href="/Donor/Details/@donor.DonorId" class="text-blue-600 hover:text-blue-900">
                                        <i data-lucide="eye" class="w-4 h-4"></i>
                                    </a>
                                    <a href="/Donor/Edit/@donor.DonorId" class="text-indigo-600 hover:text-indigo-900">
                                        <i data-lucide="edit" class="w-4 h-4"></i>
                                    </a>
                                    <a href="/Donor/Delete/@donor.DonorId" class="text-red-600 hover:text-red-900">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i data-lucide="users" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No donors found</h3>
                <p class="text-gray-500 mb-6">Get started by adding your first blood donor.</p>
                <a href="/Donor/Create" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition">
                    Add First Donor
                </a>
            </div>
        }
    </div>
</div>