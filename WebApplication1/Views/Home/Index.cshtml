@model WebApplication1.Models.DashboardViewModel

@{
    ViewData["Title"] = "BloodConnect";
}

<!-- Tailwind CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">

<!-- NAVBAR -->
<nav class="bg-white shadow-md py-4 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
        <div class="font-bold text-2xl text-red-600">BloodConnect</div>
        <ul class="flex space-x-6">
            <li><a href="javascript:void(0)" onclick="scrollToSection('statsContainer')" class="hover:text-red-600 transition">Find Donor</a></li>
            <li><a href="javascript:void(0)" onclick="scrollToSection('searchForm')" class="hover:text-red-600 transition">Request Blood</a></li>
            <li><a href="javascript:void(0)" onclick="scrollToSection('urgentRequestsContainer')" class="hover:text-red-600 transition">Requests</a></li>
            <li><a href="javascript:void(0)" onclick="scrollToSection('bloodDrivesContainer')" class="hover:text-red-600 transition">Drives</a></li>
            <li><a href="javascript:void(0)" onclick="scrollToSection('contactSection')" class="hover:text-red-600 transition">Contact</a></li>
            <li><a href="/Account/Login" class="hover:text-red-600 transition">Login</a></li>
        </ul>
    </div>
</nav>

<!-- HERO SECTION -->
<section class="text-center mb-12">
    <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
        KNUST Students <span class="bg-gradient-to-r from-red-600 to-yellow-600 bg-clip-text text-transparent">Saving Lives</span>
    </h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Connect with fellow KNUST students. Donate blood, save lives within our campus community.
    </p>

    <!-- Stats Cards -->
    <div class="grid grid-cols-3 gap-4 max-w-3xl mx-auto mb-12" id="statsContainer">
        <div class="bg-gradient-to-r from-red-400 to-red-600 p-6 rounded-2xl shadow-lg border-t-4 border-red-700">
            <div class="text-3xl font-bold text-white mb-1">@Model.TotalDonations</div>
            <div class="text-white text-sm">Lives Saved</div>
        </div>
        <div class="bg-gradient-to-r from-yellow-400 to-yellow-600 p-6 rounded-2xl shadow-lg border-t-4 border-yellow-700">
            <div class="text-3xl font-bold text-white mb-1">@Model.TotalDonors</div>
            <div class="text-white text-sm">Student Donors</div>
        </div>
        <div class="bg-gradient-to-r from-green-400 to-green-600 p-6 rounded-2xl shadow-lg border-t-4 border-green-700">
            <div class="text-3xl font-bold text-white mb-1">@Model.TotalRequests</div>
            <div class="text-white text-sm">Requests</div>
        </div>
    </div>
</section>

<!-- TAB NAVIGATION -->
<div class="flex justify-center mb-8">
    <div class="bg-white rounded-full p-1 shadow-md inline-flex">
        <button id="findTab" class="tab-btn active px-6 py-3 rounded-full font-semibold transition-all bg-gradient-to-r from-red-400 to-red-600 text-white">
            Find Donor
        </button>
        <button id="requestTab" class="tab-btn px-6 py-3 rounded-full font-semibold transition-all text-gray-600">
            Request Blood
        </button>
    </div>
</div>

<!-- SEARCH/FILTER SECTION -->
<section class="max-w-4xl mx-auto mb-12">
    <div class="bg-white rounded-3xl shadow-xl p-8 border-t-4 border-yellow-400">
        <h3 class="text-lg font-semibold text-gray-900 mb-4" id="searchTitle">
            Find a Blood Donor
        </h3>
        <form id="searchForm">
            <div class="grid md:grid-cols-3 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Blood Type</label>
                    <select id="bloodType" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent">
                        <option value="">Select Type</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Hall of Residence</label>
                    <select id="hall" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent">
                        <option value="">All Halls</option>
                        <option value="Unity Hall">Unity Hall</option>
                        <option value="Katanga Hall">Katanga Hall</option>
                        <option value="University Hall">University Hall</option>
                        <option value="Republic Hall">Republic Hall</option>
                        <option value="Independence Hall">Independence Hall</option>
                        <option value="Queen Elizabeth Hall">Queen Elizabeth Hall</option>
                        <option value="Africa Hall">Africa Hall</option>
                        <option value="Unity Hall (Conti)">Unity Hall (Conti)</option>
                    </select>
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-red-500 to-yellow-500 text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all flex items-center justify-center">
                        Search
                    </button>
                </div>
            </div>
        </form>

        <div id="donorResultsContainer" class="mt-6"></div>

        <div id="requestNote" class="hidden mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
            <p class="text-sm text-gray-700 mb-3">
                <strong>Note:</strong> Your request will be verified by KNUST Health Services before posting.
            </p>
            <button id="createRequestBtn" class="px-6 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold hover:shadow-lg transition-colors">
                Create Request
            </button>
        </div>
    </div>
</section>

<!-- URGENT REQUESTS -->
<section id="urgentRequestsContainer" class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Urgent Requests from Students</h2>
    <div class="grid md:grid-cols-3 gap-6">
        @foreach (var req in Model.RecentRequests)
        {
            <div class="request-card bg-gradient-to-r from-red-100 to-red-200 rounded-2xl shadow-md hover:shadow-xl transition-shadow p-6 border-l-4 border-red-500">
                <div class="flex items-start justify-between mb-4">
                    <div class="bg-red-100 text-red-600 px-4 py-2 rounded-full font-bold text-2xl">
                        O-
                    </div>
                    <div class="text-right">
                        <span class="inline-block bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full mb-1">
                            ✓ @req.Status
                        </span>
                        <div class="text-xs text-gray-500">2 hours ago</div>
                    </div>
                </div>
                <h3 class="font-semibold text-gray-900 mb-1">@req.PatientName</h3>
                <div class="text-sm text-gray-600 mb-2">Computer Engineering</div>
                <div class="flex items-center text-gray-600 text-sm mb-2">
                    Unity Hall
                </div>
                <div class="flex items-center justify-between mt-4 pt-4 border-t">
                    <span class="text-sm text-gray-600">2 units needed</span>
                    <button class="respond-btn px-4 py-2 bg-red-50 text-red-600 rounded-lg font-semibold hover:bg-red-100 transition-colors" data-requestid="@req.RequestId">
                        I Can Help
                    </button>

                </div>
            </div>
        }
    </div>
</section>

<!-- BLOOD DRIVES -->
<section id="bloodDrivesContainer" class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Upcoming Campus Blood Drives</h2>
    <div class="grid md:grid-cols-2 gap-6">
        <div class="drive-card bg-gradient-to-br from-yellow-50 to-yellow-200 rounded-2xl shadow-md hover:shadow-xl transition-shadow p-6 border-t-4 border-yellow-400">
            <div class="flex items-start justify-between mb-4">
                <div>
                    <h3 class="font-bold text-xl text-gray-900 mb-2">KNUST Health Week</h3>
                    <div class="flex items-center text-gray-600 mb-2">
                        Oct 25, 2025
                    </div>
                    <div class="flex items-center text-gray-600 mb-2">
                        Great Hall
                    </div>
                    <div class="text-sm text-gray-500">
                        Organized by: SRC Health Committee
                    </div>
                </div>
                <div class="bg-white px-3 py-1 rounded-full text-sm font-semibold text-green-600 border border-green-200">
                    45 slots left
                </div>
            </div>
            <button class="register-btn w-full mt-4 px-6 py-3 bg-gradient-to-r from-red-500 to-yellow-500 text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all">
                Register Now
            </button>
        </div>
    </div>
</section>

<!-- CONTACT SECTION -->
<section id="contactSection" class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Contact Us</h2>
    <p class="text-gray-700">Email: bloodconnect@knust.edu.gh</p>
    <p class="text-gray-700">Phone: +233 50 123 4567</p>
</section>

<!-- JAVASCRIPT -->
<script>
    // TAB SWITCHING
    const findTab = document.getElementById('findTab');
    const requestTab = document.getElementById('requestTab');
    const searchTitle = document.getElementById('searchTitle');
    const requestNote = document.getElementById('requestNote');

    findTab.addEventListener('click', () => {
        findTab.classList.add('bg-gradient-to-r', 'from-red-400', 'to-red-600', 'text-white');
        findTab.classList.remove('text-gray-600');
        requestTab.classList.remove('bg-gradient-to-r', 'from-red-400', 'to-red-600', 'text-white');
        requestTab.classList.add('text-gray-600');

        searchTitle.textContent = 'Find a Blood Donor';
        requestNote.classList.add('hidden');
    });

    requestTab.addEventListener('click', () => {
        requestTab.classList.add('bg-gradient-to-r', 'from-red-400', 'to-red-600', 'text-white');
        requestTab.classList.remove('text-gray-600');
        findTab.classList.remove('bg-gradient-to-r', 'from-red-400', 'to-red-600', 'text-white');
        findTab.classList.add('text-gray-600');

        searchTitle.textContent = 'Request Blood';
        requestNote.classList.remove('hidden');
    });

    // SCROLL TO SECTION
    function scrollToSection(id) {
        const el = document.getElementById(id);
        if(el) el.scrollIntoView({ behavior: 'smooth' });
    }

</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#searchForm').on('submit', function(e) {
            e.preventDefault(); // prevent page reload

            var bloodType = $('#bloodType').val();
            var hall = $('#hall').val();

            $.ajax({
                url: '@Url.Action("SearchDonor", "Home")',
                type: 'POST',
                data: { bloodType: bloodType, hall: hall },
                success: function(result) {
                    // replace the content of the container with the returned partial view
                    $('#requestNote').hide(); // hide note if any
                    $('#donorResultsContainer').html(result);
                },
                error: function() {
                    alert('Error fetching donors. Please try again.');
                }
            });
        });
    });
</script>
<script>
    $(document).ready(function() {
        // Respond to urgent request
        $('.respond-btn').click(function() {
            var requestId = $(this).data('requestid');

            $.ajax({
                url: '@Url.Action("HelpRequest", "Home")',
                type: 'POST',
                data: { requestId: requestId },
                success: function(response) {
                    alert('You have successfully responded to this request!');
                },
                error: function() {
                    alert('Error. Please try again.');
                }
            });
        });
    });
</script>

