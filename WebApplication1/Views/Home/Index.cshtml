@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<section class="text-center mb-12">
    <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
        KNUST Students <span class="bg-gradient-to-r from-red-600 to-yellow-600 bg-clip-text text-transparent">Saving Lives</span>
    </h1>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Connect with fellow KNUST students. Donate blood, save lives within our campus community.
    </p>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto mb-12" id="statsContainer">
        <div class="bg-gradient-to-r from-red-400 to-red-600 p-6 rounded-2xl shadow-lg border-t-4 border-red-700">
            <div class="text-3xl font-bold text-white mb-1">@ViewBag.TotalDonors</div>
            <div class="text-white text-sm">Donors</div>
        </div>
        <div class="bg-gradient-to-r from-blue-400 to-blue-600 p-6 rounded-2xl shadow-lg border-t-4 border-blue-700">
            <div class="text-3xl font-bold text-white mb-1">@ViewBag.TotalRequests</div>
            <div class="text-white text-sm">Requests</div>
        </div>
        <div class="bg-gradient-to-r from-green-400 to-green-600 p-6 rounded-2xl shadow-lg border-t-4 border-green-700">
            <div class="text-3xl font-bold text-white mb-1">@ViewBag.TotalDonations</div>
            <div class="text-white text-sm">Donations</div>
        </div>
        <div class="bg-gradient-to-r from-orange-400 to-orange-600 p-6 rounded-2xl shadow-lg border-t-4 border-orange-700">
            <div class="text-3xl font-bold text-white mb-1">@ViewBag.TotalInventory</div>
            <div class="text-white text-sm">Inventory Units</div>
        </div>
    </div>
</section>

<!-- ERROR MESSAGE -->
@if (TempData["Error"] != null)
{
    <div class="max-w-4xl mx-auto mb-8">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            @TempData["Error"]
        </div>
    </div>
}

<!-- SEARCH SECTION -->
<section class="max-w-4xl mx-auto mb-12">
    <div class="bg-white rounded-3xl shadow-xl p-8 border-t-4 border-yellow-400">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            Find a Blood Donor
        </h3>
        <form asp-action="SearchDonor" method="post">
            <div class="grid md:grid-cols-3 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Search Term</label>
                    <input name="searchTerm" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent" placeholder="Name, email, or blood type" />
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-red-500 to-yellow-500 text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all flex items-center justify-center">
                        <i data-lucide="search" class="w-5 h-5 mr-2"></i>
                        Search
                    </button>
                </div>
            </div>
        </form>

        <!-- SEARCH RESULTS -->
        @if (ViewBag.SearchResults != null)
        {
            <div class="mt-6">
                <h4 class="text-md font-semibold text-gray-900 mb-4">Search Results for "@ViewBag.SearchTerm"</h4>
                <div class="grid md:grid-cols-2 gap-4">
                    @foreach (var donor in ViewBag.SearchResults as List<WebApplication1.Models.Donor>)
                    {
                        <div class="bg-gray-50 rounded-lg p-4 border">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h5 class="font-semibold text-gray-900">@donor.FirstName @donor.LastName</h5>
                                    <p class="text-sm text-gray-600">@donor.EmailAddress</p>
                                    <p class="text-sm text-gray-600">@donor.PhoneNumber</p>
                                </div>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    @donor.BloodType
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>

<!-- RECENT REQUESTS -->
@if (ViewBag.RecentRequests != null && ((List<WebApplication1.Models.BloodRequest>)ViewBag.RecentRequests).Any())
{
    <section id="requests" class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Recent Blood Requests</h2>
        <div class="grid md:grid-cols-3 gap-6">
            @foreach (var req in ViewBag.RecentRequests as List<WebApplication1.Models.BloodRequest>)
            {
                <div class="request-card bg-gradient-to-r from-red-100 to-red-200 rounded-2xl shadow-md hover:shadow-xl transition-shadow p-6 border-l-4 border-red-500">
                    <div class="flex items-start justify-between mb-4">
                        <div class="bg-red-100 text-red-600 px-4 py-2 rounded-full font-bold text-2xl">
                            @req.BloodTypeRequired
                        </div>
                        <div class="text-right">
                            @{
                                var statusColor = req.Status switch
                                {
                                    "Pending" => "bg-yellow-100 text-yellow-700",
                                    "Approved" => "bg-blue-100 text-blue-700",
                                    "Completed" => "bg-green-100 text-green-700",
                                    "Rejected" => "bg-red-100 text-red-700",
                                    _ => "bg-gray-100 text-gray-700"
                                };
                            }
                            <span class="inline-block @statusColor text-xs px-2 py-1 rounded-full mb-1">
                                @req.Status
                            </span>
                            <div class="text-xs text-gray-500">@req.RequestedDate.ToString("MMM dd")</div>
                        </div>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">@req.Recipient?.FirstName @req.Recipient?.LastName</h3>
                    <div class="text-sm text-gray-600 mb-2">@req.Recipient?.Email</div>
                    <div class="flex items-center justify-between mt-4 pt-4 border-t">
                        <span class="text-sm text-gray-600">@(req.QuantityRequested?.ToString() ?? "Not specified") units needed</span>
                        <a href="/BloodRequest/Details/@req.RequestId" class="px-4 py-2 bg-red-50 text-red-600 rounded-lg font-semibold hover:bg-red-100 transition-colors">
                            View Details
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>
}

<!-- RECENT DONATIONS -->
@if (ViewBag.RecentDonations != null && ((List<WebApplication1.Models.BloodDonation>)ViewBag.RecentDonations).Any())
{
    <section id="donations" class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Recent Blood Donations</h2>
        <div class="grid md:grid-cols-3 gap-6">
            @foreach (var donation in ViewBag.RecentDonations as List<WebApplication1.Models.BloodDonation>)
            {
                <div class="donation-card bg-gradient-to-r from-green-100 to-green-200 rounded-2xl shadow-md hover:shadow-xl transition-shadow p-6 border-l-4 border-green-500">
                    <div class="flex items-start justify-between mb-4">
                        <div class="bg-green-100 text-green-600 px-4 py-2 rounded-full font-bold text-2xl">
                            @donation.BloodType
                        </div>
                        <div class="text-right">
                            <span class="inline-block bg-green-100 text-green-700 text-xs px-2 py-1 rounded-full mb-1">
                                ✓ Donated
                            </span>
                            <div class="text-xs text-gray-500">@donation.DonationDate?.ToString("MMM dd")</div>
                        </div>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">@donation.Donor?.FirstName @donation.Donor?.LastName</h3>
                    <div class="text-sm text-gray-600 mb-2">@donation.Donor?.EmailAddress</div>
                    <div class="flex items-center justify-between mt-4 pt-4 border-t">
                        <span class="text-sm text-gray-600">@donation.Quantity unit(s) donated</span>
                        <a href="/BloodDonation/Details/@donation.DonationId" class="px-4 py-2 bg-green-50 text-green-600 rounded-lg font-semibold hover:bg-green-100 transition-colors">
                            View Details
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>
}

<!-- QUICK ACTIONS -->
<section class="max-w-4xl mx-auto mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Quick Actions</h2>
    <div class="grid md:grid-cols-4 gap-4">
        <a href="/Donor/Create" class="bg-gradient-to-r from-red-500 to-red-600 text-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all text-center">
            <i data-lucide="user-plus" class="w-8 h-8 mx-auto mb-2"></i>
            <h3 class="font-semibold">Register as Donor</h3>
        </a>
        <a href="/BloodRequest/Create" class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all text-center">
            <i data-lucide="heart" class="w-8 h-8 mx-auto mb-2"></i>
            <h3 class="font-semibold">Request Blood</h3>
        </a>
        <a href="/BloodDonation/Create" class="bg-gradient-to-r from-green-500 to-green-600 text-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all text-center">
            <i data-lucide="droplet" class="w-8 h-8 mx-auto mb-2"></i>
            <h3 class="font-semibold">Record Donation</h3>
        </a>
        <a href="/BloodInventory" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all text-center">
            <i data-lucide="package" class="w-8 h-8 mx-auto mb-2"></i>
            <h3 class="font-semibold">View Inventory</h3>
        </a>
    </div>
</section>

<!-- CONTACT SECTION -->
<section id="contact" class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Contact Us</h2>
    <p class="text-gray-700">Email: bloodconnect@knust.edu.gh</p>
    <p class="text-gray-700">Phone: +233 50 123 4567</p>
</section>
