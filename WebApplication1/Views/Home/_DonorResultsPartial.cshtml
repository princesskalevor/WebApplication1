
@model List<WebApplication1.Models.DonorResult>

@if (!Model.Any())
{
    <p class="text-gray-500">No donors found matching your criteria.</p>
}
else
{
    <div class="grid md:grid-cols-2 gap-4">
        @foreach (var donor in Model)
        {
            <div class="bg-white p-4 rounded-xl shadow-md border-l-4 border-red-500">
                <h3 class="font-bold text-lg text-gray-900">@donor.Name</h3>
                <p class="text-sm text-gray-600">
                    Blood Type: <span class="font-semibold">@donor.BloodType</span>
                </p>
                <p class="text-sm text-gray-600">
                    Hall: <span class="font-semibold">@donor.Hall</span>
                </p>
                <p class="text-sm text-gray-600">
                    Department: <span class="font-semibold">@donor.Department</span>
                </p>
            </div>
        }
    </div>
}
