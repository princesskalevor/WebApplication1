@model WebApplication1.Models.Recipient

@{
    ViewData["Title"] = "Add New Recipient";
}

<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <i data-lucide="user-plus" class="w-8 h-8 text-blue-600"></i>
            Add New Recipient
        </h1>
        <p class="text-gray-600 mt-2">Register a new blood recipient in the system</p>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Create" method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- First Name -->
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="FirstName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter first name" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                </div>

                <!-- Last Name -->
                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="LastName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="recipient@email.com" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Phone Number -->
                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="PhoneNumber" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="0241234567" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Blood Type -->
                <div>
                    <label asp-for="BloodType" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <select asp-for="BloodType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Select blood type</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                    <span asp-validation-for="BloodType" class="text-red-500 text-sm"></span>
                </div>

                <!-- Quantity Requested -->
                <div>
                    <label asp-for="QuantityRequested" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="QuantityRequested" type="number" min="1" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter quantity (optional)" />
                    <span asp-validation-for="QuantityRequested" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/Recipient" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition flex items-center gap-2">
                    <i data-lucide="save" class="w-5 h-5"></i>
                    Create Recipient
                </button>
            </div>
        </form>
    </div>
</div>
